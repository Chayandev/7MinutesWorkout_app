<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    tools:context=".ExerciseActivity"
    android:id="@+id/exAcitvity"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_excersise"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/tool_bar_bg"
        android:theme="@style/ToolBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:titleTextColor="@color/white" >
        <ImageView
            android:id="@+id/profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:background="@drawable/image_bg"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/rest_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="GET READY FOR"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/restView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/restView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/get_ready_btn_mostouter_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar_excersise">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:max="10"
            android:progress="0"
            android:rotation="-90"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circular_progress_bar_gray"
            />
         <LinearLayout
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:background="@drawable/ready_btn_solid_bg"
             >
             <TextView
                 android:id="@+id/timerTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 android:textSize="25sp"
                 />
         </LinearLayout>
    </FrameLayout>
    <ImageView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="@color/tool_bar_bg"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tool_bar_excersise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvExerciseName"
        />
    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animationView"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/upcomingExlb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/restView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upex"
        android:text="Upcoming Exercise:"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/upex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upcomingExlb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:text="Jumping Jacks"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <FrameLayout
        android:id="@+id/exercise_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_marginTop="8dp"
        android:background="@drawable/get_ready_btn_mostouter_bg"
        app:layout_constraintBottom_toTopOf="@id/animBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExerciseName">
        <ProgressBar
            android:id="@+id/exercise_progress_bar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:max="30"
            android:progress="0"
            android:rotation="-90"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circular_progress_bar_gray"
            />
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ready_btn_solid_bg"
            >
            <TextView
                android:id="@+id/exercise_timerTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                />
        </LinearLayout>
    </FrameLayout>
   <Button
       android:id="@+id/animBtn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:layout_marginBottom="5dp"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       android:text="PAUSE"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:padding="10dp"
       app:layout_constraintTop_toBottomOf="@id/exercise_layout"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toTopOf="@id/exercise_status_view"
       android:backgroundTint="@color/sporty_bg"
       />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercise_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:listitem="@layout/recycler_item_view"
        app:layout_constraintTop_toBottomOf="@id/animBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>